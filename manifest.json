{
  "manifest_version": 3,
  "name": "Email Tracker",
  "version": "1.0",
  "description": "An extension to track email opens.",
  "permissions": [
    "storage",
    "identity"
  ],
  "oauth2": {
    "client_id": "988633715954-5ctqiddhevhs002g1fqleia30cs5u2sp.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/gmail.send",
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
